<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.bitcodeti.guia.View.EventoVer"
    android:background="@color/branco"
    android:id="@+id/act_ev_ver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/branco"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/evnt_foto"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@color/branco"/>
            </LinearLayout>

            <TextView
                android:id="@+id/evnt_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Emancipação de Princesa Isabel"
                android:background="@color/azul"
                android:textColor="@color/branco"
                android:textSize="18dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/evnt_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Endereço"
                android:textSize="19dp"/>

            <View
                android:background="@color/cinzaclaro"
                android:layout_width = "fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dip"/>

            <TextView
                android:id="@+id/evnt_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="15/03/2019 às 22:00hs"
                android:textColor="@color/azul"
                android:textStyle="bold"
                android:textSize="22dp"/>

            <View
                android:background="@color/cinzaclaro"
                android:layout_width = "fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dip"/>

            <TextView
                android:id="@+id/evnt_descri"
            android:layout_width="match_parent"
                android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content"
            android:padding="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            android:text="Endasdasdasdasdasdsaddddddddddddddddddddddddddddddddddddddddddasdasdsadsad"
            android:textSize="17dp"/>

            <View
                android:background="@color/cinzaclaro"
                android:layout_width = "fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dip"/>


            <TextView
                android:id="@+id/evnt_outrasinfo"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="outras infor"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/evnt_preco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right"
                android:text="R$ Gratis"
                android:textColor="@color/azul"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/evnt_organizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="10dp"
                android:text="Organização"
                android:textColor="#1a1a1a"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"/>

            
        </LinearLayout>

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="210dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/circulo"
                android:elevation="4dp">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:background="@drawable/pointer"
                    android:id="@+id/evento_rota"
                    />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/branco"
        android:id="@+id/img_todo"
        android:visibility="invisible"/>
</RelativeLayout>
