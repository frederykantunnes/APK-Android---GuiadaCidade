<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:background="@drawable/retangulobranco">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foto_local_evento"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/evento_foto"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/lista_evento_nome"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="Emancipação Política de Princesa"
                android:textColor="@color/cinza"
                android:fontFamily="sans-serif-condensed"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lista_evento_endereco"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="Rua Hermes Maia, 118, Maia, Princesa Isabel PB"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lista_evento_data"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="22dp"
                android:text="23/09/2017 - 22:00hs"
                android:textColor="@color/azul"
                android:textStyle="bold"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/lista_evento_valor"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right"
                android:text="Valor: R$: 0,00 "
                android:textColor="@color/cinza"
                android:textSize="18dp"
                 />


        </LinearLayout>

</LinearLayout></LinearLayout></LinearLayout>