<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:background="@drawable/retangulobranco">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foto_local"
            android:layout_width="90dp"

            android:layout_height="90dp"
            android:src="@drawable/local"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/lista_locais_nome"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Parque Princesa Isabel"
                android:textColor="@color/cinza"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lista_locais_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Rua Hermes Maia, 118, Maia, Princesa Isabel PB"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lista_locais_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Bancos - Agencias, BB auto"
                android:textColor="@color/cinzaclaro"
                android:textSize="14dp" />

        </LinearLayout>


</LinearLayout></LinearLayout></LinearLayout>