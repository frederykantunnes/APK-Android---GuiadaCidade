<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.bitcodeti.guia.View.Principal"
    tools:showIn="@layout/app_bar_principal"
    android:scrollX="0dp"

    android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ss.com.bannerslider.views.BannerSlider
                    android:id="@+id/banner_slider1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:interval="4000"
                    app:loopSlides="true"
                    android:background="@drawable/carregando_imagem"
                    app:defaultIndicators="round_square"
                    app:defaultBanner="1"
                    app:animateIndicators="true"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/guia_logo_tres"
                    android:layout_marginTop="170dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:background="#ffbf00">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Princesa Isabel"
                        android:textSize="25dp"
                        android:textColor="#fff"
                        android:elevation="4dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:shadowRadius="1"
                        android:shadowColor="#64000000"
                        android:shadowDx="3"
                        android:shadowDy="3"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_divulgar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/retanguloazul"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="20dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="Divulgue também, é grátis!"
                    android:textColor="@color/branco"

                    android:textStyle="bold"
                    android:visibility="invisible" />
            <LinearLayout
                android:id="@+id/line_ev"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="#14015e"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Próximos Eventos"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:shadowRadius="1"
                    android:shadowColor="#64000000"
                    android:shadowDx="3"
                    android:shadowDy="3"/>
            </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <ListView
            android:id="@+id/lista_eventos_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            >
        </ListView>


    </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="#1e1e1e">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locais"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:shadowRadius="1"
                    android:shadowColor="#64000000"
                    android:shadowDx="3"
                    android:shadowDy="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#64000000"
                    android:padding="10dp"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/btn_hosp"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/doctor"
                        android:background="@drawable/retangulocinza"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        />

                    <ImageButton
                        android:id="@+id/btn_gov"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/cap"
                        android:scaleType="fitCenter"
                        android:background="@drawable/retangulocinza"
                        />

                    <ImageButton
                        android:id="@+id/btn_rest"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/dinner"
                        android:scaleType="fitCenter"
                        android:background="@drawable/retangulocinza"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#64000000"
                    android:layout_weight="1">


                    <ImageButton
                        android:id="@+id/btn_postos"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/gasoline"
                        android:scaleType="fitCenter"
                        android:background="@drawable/retangulocinza"
                        />
                    <ImageButton
                        android:id="@+id/btn_laser"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/travel"
                        android:scaleType="fitCenter"
                        android:background="@drawable/retangulocinza"
                        />
                    <ImageButton
                        android:id="@+id/btn_bar"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/beer"
                        android:scaleType="fitCenter"
                        android:background="@drawable/retangulocinza"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</ScrollView>
